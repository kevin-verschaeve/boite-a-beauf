{% macro soundButton(label, path, isNew) %}
    <div class="col-6 md-col-4 lg-col-3 border-box wrap">
        <a href="#" class="js-play button-sound bold text-decoration-none center block flex items-center justify-center{{ isNew ? ' new' }}" data-sound="{{ path }}">
            <span>{{ label }}</span>
        </a>
    </div>
{% endmacro %}
